<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link href="/assets/styles/app.css" type="text/css" rel="stylesheet"/>
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
           {% block header %}
                <div id="header">
                    <h1>Tareas Symfony</h1>
                    <ul id="menu">
                        {% if app.user %}
                            <li><a href="/tareas">Inicio</a></li>
                            <li><a href="/mis-tareas">Mis Tareas</a></li>
                            <li><a href="/crea-tarea">Nueva Tarea</a></li>
                            <li style="float:right;border-right: 1px solid #ccc"><a href="/logout">Logout</a></li>
                            <li style="float:right;border-right: 1px solid #ccc"><a href="#">{{app.user.name ~ ' ' ~ app.user.surname }}</a></li>
                        {% else %}
                            <li><a href="/">Login</a></li>
                            <li><a href="/register">Registro</a></li>
                        {% endif %}
                    </ul>
                </div>
                <div class="clearfix"></div>
            {% endblock %}

            
        {% endblock %}
    </body>
</html>
